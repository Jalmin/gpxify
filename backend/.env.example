# ==================================
# GPX NINJA - Environment Variables
# ==================================

# Application Settings
APP_NAME=GPXIFY
ENVIRONMENT=development
DEBUG=True
API_V1_STR=/api/v1

# Server (comma-separated list for multiple origins)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database (REQUIRED)
DATABASE_URL=postgresql://gpxify:gpxify_dev_password_123@db:5432/gpxify

# Security (REQUIRED - generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Upload Settings
MAX_UPLOAD_SIZE=26214400
UPLOAD_DIR=./uploads

# SMTP Settings (optional - for contact form)
# Leave empty to use dev mode (just logs messages)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
CONTACT_EMAIL=contact@gpx.ninja

# Google OAuth (optional - not implemented yet)
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
