# =============================================
# GPX NINJA - Production Environment Variables
# =============================================
# Copy this to .env and fill in your production values

# Application Settings
APP_NAME=GPXIFY
ENVIRONMENT=production
DEBUG=False
API_V1_STR=/api/v1

# Server (comma-separated list - add your production domains)
BACKEND_CORS_ORIGINS=https://www.gpx.ninja,https://gpx.ninja

# Database (REQUIRED - use strong password)
DATABASE_URL=postgresql://gpxify_prod:CHANGE_THIS_PASSWORD@db:5432/gpxify_prod

# Security (REQUIRED - generate with: openssl rand -hex 32)
# NEVER use the default value in production!
SECRET_KEY=GENERATE_A_SECURE_KEY_WITH_OPENSSL_RAND_HEX_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Upload Settings
MAX_UPLOAD_SIZE=26214400
UPLOAD_DIR=./uploads

# SMTP Settings (REQUIRED for contact form in production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
CONTACT_EMAIL=contact@gpx.ninja

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your_production_client_id
# GOOGLE_CLIENT_SECRET=your_production_client_secret
# GOOGLE_REDIRECT_URI=https://www.gpx.ninja/api/v1/auth/google/callback
