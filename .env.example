# =============================================================================
# GPXIFY - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=GPX Ninja
ENVIRONMENT=production
DEBUG=False

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://gpxify:your_password_here@db:5432/gpxify

# For local development with Docker:
# DATABASE_URL=postgresql://gpxify:gpxify@localhost:5432/gpxify

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=gpxify
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=gpxify

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# JWT settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Google OAuth (Optional - for future authentication)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=https://www.gpx.ninja,https://gpx.ninja,http://localhost:5173

# -----------------------------------------------------------------------------
# Frontend Build Args
# -----------------------------------------------------------------------------
VITE_API_URL=https://www.gpx.ninja
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# -----------------------------------------------------------------------------
# Upload Settings
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/app/uploads

# -----------------------------------------------------------------------------
# PTP (Profile to Print) - Admin Settings
# -----------------------------------------------------------------------------
# Anthropic API key for Claude (ravito table parsing)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Admin authentication
# Secret URL segment (change this to something unique)
ADMIN_SECRET_URL=your-secret-admin-url

# Admin password hash (generate with: python -c "import hashlib; print(hashlib.sha256(b'your-password').hexdigest())")
ADMIN_PASSWORD_HASH=your_password_hash_here
